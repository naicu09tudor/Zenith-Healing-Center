@model Cabinet

@{
    ViewData["Title"] = "Sterge cabinet";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <div class="text-center my-5">
                <h1>Apasa confirma daca vrei sa stergi </h1>
            </div>
            
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <div class="row">
                        <div class="col">
                            <form asp-action="DeleteConfirmed" class="d-inline">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Confirm" class="btn btn-danger me-2" />
                            </form>
                            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

