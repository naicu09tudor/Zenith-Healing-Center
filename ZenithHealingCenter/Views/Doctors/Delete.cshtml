@model Doctor

@{
    ViewData["Title"] = "Sterge doctor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <div class="text-center my-5">
                <h1>Apasa confirma daca vrei sa stergi </h1>
            </div>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ImageURLPreview" />
                </div>
                <div class="form-group">
                    <label asp-for="ImageURL" class="control-label"></label>
                    <input asp-for="ImageURL" class="form-control" readonly />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpecializareDoctor" class="control-label"></label>
                    <input asp-for="SpecializareDoctor" class="form-control" readonly />
                    <span asp-validation-for="SpecializareDoctor" class="text-danger"></span>
                </div>

                <div class="form-group">
               
                    <div class="row">
                        <div class="col">
                            <form asp-action="DeleteConfirmed" class="d-inline">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Confirm" class="btn btn-danger me-2" />
                            </form>
                            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImageURLPreview');
            output.src = $("#ImageURL").val();
        })
    </script>
}